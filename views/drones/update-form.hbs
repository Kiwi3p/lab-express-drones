<h2>Editing {{drone.name}}</h2>
<form action="/drones/{{drone._id}}/edit" method="POST">
  <label>
    Name
    <input type="text" name="name" value="{{drone.name}}">
  </label>
  <label>
    Max Speed
    <input type="number" name="maxSpeed" max="10" value="{{drone.maxSpeed}}">
  </label>
  <label>
    Propellers
    <input type="number" name="propellers" max="1000" value="{{drone.propellers}}">
  </label>
  <button type="submit">Create</button>
</form>